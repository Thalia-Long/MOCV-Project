<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/spinner"
        android:entries="@array/view"
        android:background="#ffd5d5d5"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:spinnerMode="dropdown"
        android:clickable="true"
        android:dropDownSelector="@color/abc_primary_text_disable_only_material_dark"
        android:dropDownWidth="250dp"
        android:contentDescription="@string/abc_searchview_description_search"
        android:elevation="180dp"
        android:labelFor="@color/abc_background_cache_hint_selector_material_light" />

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Settings"
        android:id="@+id/settingButton"
        android:onClick="buttonOnClick"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp"
        android:padding="5dp"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/preview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/spinner"
        android:layout_toLeftOf="@+id/spinner"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:onClick="exitButtonOnClick"
        android:id="@+id/exitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
